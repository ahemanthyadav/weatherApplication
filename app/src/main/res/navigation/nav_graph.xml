<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/WeatherSearchFragment">

    <fragment
        android:id="@+id/WeatherDetailsFragment"
        android:name="com.example.weatherapplication.ui.WeatherDetailsFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/weather_details">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/WeatherSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/WeatherSearchFragment"
        android:name="com.example.weatherapplication.ui.WeatherSearchFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/weather_search">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/WeatherDetailsFragment" />
    </fragment>
</navigation>